<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <!--Home-->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShopServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.ShopServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShopServlet</servlet-name>
        <url-pattern>/shop</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BlogServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.BlogServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlogServlet</servlet-name>
        <url-pattern>/blog</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ContactServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.ContactServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactServlet</servlet-name>
        <url-pattern>/contact</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AboutServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.AboutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AboutServlet</servlet-name>
        <url-pattern>/about</url-pattern>
    </servlet-mapping>

    <!--Cart-->
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.products.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/product/add</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.DetailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailServlet</servlet-name>
        <url-pattern>/product/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ShoppingCartServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.ShoppingCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShoppingCartServlet</servlet-name>
        <url-pattern>/shopping-cart</url-pattern>
    </servlet-mapping>

    <!--Customer-->
    <servlet>
        <servlet-name>CreateCustomerServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.customers.CreateCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCustomerServlet</servlet-name>
        <url-pattern>/admin/customers/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditCustomerServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.customers.EditCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCustomerServlet</servlet-name>
        <url-pattern>/admin/customers/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListCustomerServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.customers.ListCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCustomerServlet</servlet-name>
        <url-pattern>/admin/customers/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.customers.DeleteCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCustomerServlet</servlet-name>
        <url-pattern>/admin/customers/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailCustomerServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.customers.DetailCustomerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailCustomerServlet</servlet-name>
        <url-pattern>/admin/customers/detail</url-pattern>
    </servlet-mapping>

    <!--Product-->
    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.products.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/admin/products/create</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditProductServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.products.EditProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditProductServlet</servlet-name>
        <url-pattern>/admin/products/edit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.products.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/admin/products/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.products.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/admin/products/delete</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailProductServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.products.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductServlet</servlet-name>
        <url-pattern>/admin/products/detail</url-pattern>
    </servlet-mapping>

    <!--Authentication-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.auth.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.example.demojsp.controller.auth.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!--Filter-->
    <filter>
        <filter-name>HelloFilter</filter-name>
        <filter-class>com.example.demojsp.controller.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>HelloFilter</filter-name>
        <url-pattern>/admin</url-pattern>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/admin/*/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>com.example.demojsp.controller.filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/user</url-pattern>
        <url-pattern>/user/*</url-pattern>
        <url-pattern>/user/*/*</url-pattern>
    </filter-mapping>
</web-app>